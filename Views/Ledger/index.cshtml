@model TestAjax.Models.Contact

@{
    ViewData["Title"] = Model.Name;

    var balance = (decimal)ViewData["Balance"];
    var transactions = ViewData["Transactions"] as List<TestAjax.Models.Transaction>
        ?? new List<TestAjax.Models.Transaction>();

    string statusText = balance > 0 ? "I will give"
                      : balance < 0 ? "I will receive"
                      : "Balance settled";

    string colorClass = balance > 0 ? "text-success"
                      : balance < 0 ? "text-danger fw-bold"
                      : "text-muted";

    string displayAmount = Math.Abs(balance).ToString("N0");

    // WhatsApp logic
    var whatsappNumber = ViewData["WhatsAppNumber"]?.ToString();

    if (!string.IsNullOrWhiteSpace(whatsappNumber))
    {
        whatsappNumber = whatsappNumber
            .Replace(" ", "")
            .Replace("-", "")
            .Replace("(", "")
            .Replace(")", "");

        if (!whatsappNumber.StartsWith("92"))
        {
            whatsappNumber = "92" + whatsappNumber.TrimStart('0');
        }
    }
}

<!-- Alerts -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="page-inner pb-4">

    <!-- Header -->
    <div class="d-flex align-items-center mb-3">
        <a asp-controller="Contacts" asp-action="Index" class="me-3 text-dark">
            <i class="fas fa-arrow-left fa-lg"></i>
        </a>

        <h4 class="mb-0 fw-bold d-flex align-items-center">
            @Model.Name
            <a asp-controller="Contacts"
               asp-action="Edit"
               asp-route-id="@Model.Id"
               class="ms-2 text-muted"
               title="Edit Name">
                <i class="fas fa-pencil-alt ms-2 text-muted small"></i>
            </a>
        </h4>

        <div class="ms-auto">
            <button class="btn btn-sm btn-outline-primary me-2">
                <i class="fas fa-download me-1"></i> DOWNLOAD PDF
            </button>

            @if (!string.IsNullOrEmpty(whatsappNumber))
            {
                <a href="https://wa.me/@whatsappNumber?text=@Uri.EscapeDataString($"You have an outstanding balance of Rs. {displayAmount}. You have to pay this amount.")" target="_blank" class="btn btn-sm btn-success" title="Start a conversation on WhatsApp">
                    <i class="fab fa-whatsapp me-1"></i> WhatsApp
                </a>
            }
        </div>
    </div>

    <!-- Balance Card -->
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body text-center py-5">
            <h6 class="text-muted mb-2">@statusText</h6>
            <h1 class="display-4 fw-bold @colorClass">
                Rs. @displayAmount
            </h1>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-center gap-4 mb-5">
        <a asp-action="Add" asp-route-id="@Model.Id" asp-route-type="Received"
           class="btn btn-success btn-lg px-5 py-3">
            ↓ I TOOK
        </a>

        <a asp-action="Add" asp-route-id="@Model.Id" asp-route-type="Given"
           class="btn btn-danger btn-lg px-5 py-3">
            ↑ I GAVE
        </a>
    </div>

    <!-- Transactions -->
    @if (transactions.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr class="small text-muted">
                            <th>Date</th>
                            <th>Details</th>
                            <th class="text-end">Received</th>
                            <th class="text-end">Aapne Diye</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in transactions)
                        {
                            <tr data-id="@t.Id">
                                <td>
                                    @(t.TransactionDate.HasValue
                                                                ? t.TransactionDate.Value.ToString("dd MMM yyyy")
                                                                : "—")
                        </td>
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                <span>@(string.IsNullOrWhiteSpace(t.Details) ? "—" : t.Details)</span>
                                @if (!string.IsNullOrEmpty(t.PhotoFileName))
                                        {
                                            <i class="fas fa-paperclip text-secondary" title="Attachment available"></i>
                                        }
                                    </div>
                                </td>
                                <td class="text-end text-success">
                                    @(t.Type == "Received" ? t.Amount.ToString("N0") : "—")
                                </td>
                                <td class="text-end text-danger">
                                    @(t.Type == "Given" ? t.Amount.ToString("N0") : "—")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5 text-muted">
            <i class="far fa-file-alt fa-4x mb-3"></i>
            <p class="lead">No transactions yet</p>
        </div>
    }
</div>

<!-- Canvas Sidebar -->
<div id="transactionCanvas" class="transaction-canvas">
    <div class="canvas-header d-flex justify-content-between align-items-center p-3 border-bottom">

        <!-- Left Side (Close + Title + Edit) -->
        <div class="d-flex align-items-center gap-3">
            <!-- Close Button -->
            <button type="button" id="closeCanvasBtn" class="btn btn-link text-dark p-0" title="Close">
                <i class="fas fa-times fa-lg"></i>
            </button>

            <!-- Title -->
            <h5 class="mb-0">Transaction details</h5>

            <!-- Edit Button -->
            <button type="button"
                    id="editTransactionBtn"
                    class="btn btn-link text-dark p-0"
                    title="Edit"
                    data-id="">
                <i class="fas fa-pen"></i>
            </button>
        </div>

        <!-- Right Side (Delete Button) -->
        <button type="button" id="deleteTransactionBtn" class="btn btn-link text-danger p-0" title="Delete">
            <i class="fas fa-trash"></i>
        </button>
    </div>

    <div class="canvas-body p-3" id="canvasContent">
        <div class="text-center py-5">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
</div>

<style>
    .transaction-canvas {
        position: fixed;
        top: 0;
        right: -400px; /* initially hidden */
        width: 400px;
        height: 100vh;
        background: #fff;
        box-shadow: -3px 0 10px rgba(0,0,0,0.2);
        overflow-y: auto;
        transition: right 0.3s ease;
        z-index: 1050;
        display: flex;
        flex-direction: column;
    }

        .transaction-canvas.open {
            right: 0;
        }

    .canvas-header {
        border-bottom: 1px solid #ddd;
    }

    .canvas-body {
        flex: 1;
        overflow-y: auto;
    }

    tr:hover {
        cursor: pointer;
        background-color: #f8f9fa;
    }
</style>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {

            const canvas = $('#transactionCanvas');
            const content = $('#canvasContent');
            const editBtn = $('#editTransactionBtn');
            const deleteBtn = $('#deleteTransactionBtn');

            // Disable edit & delete initially
            editBtn.prop('disabled', true);
            deleteBtn.prop('disabled', true);

            // ===============================
            // ROW CLICK → OPEN CANVAS
            // ===============================
            $('table tbody tr').click(function () {

                const id = $(this).data('id');

                if (!id) {
                    alert("Transaction ID not found.");
                    return;
                }

                // Highlight selected row
                $('table tbody tr').removeClass('table-active');
                $(this).addClass('table-active');

                // Set ID to buttons
                editBtn.attr('data-id', id).prop('disabled', false);
                deleteBtn.attr('data-id', id).prop('disabled', false);

                // Open canvas
                canvas.addClass('open');

                // Show loader
                content.html(`
                    <div class="text-center py-5">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                `);

                // Load transaction details
                $.ajax({
                    url: '@Url.Action("GetTransactionCanvasContent", "Ledger")',
                    data: { id: id },
                    success: function (data) {
                        content.html(data);
                    },
                    error: function () {
                        content.html('<div class="alert alert-danger">Unable to load transaction details.</div>');
                    }
                });
            });


            // ===============================
            // EDIT BUTTON CLICK
            // ===============================
            editBtn.click(function () {

                const id = $(this).data('id');

                if (!id) {
                    alert("Transaction ID not found.");
                    return;
                }

                content.html(`
                    <div class="text-center py-5">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                `);

                $.ajax({
                    url: '@Url.Action("GetTransactionEditForm", "Ledger")',
                    data: { id: id },
                    success: function (data) {
                            console.log(data); // See raw HTML or error
                        content.html(data);
                    },
                    error: function () {
                        content.html('<div class="alert alert-danger">Unable to load edit form.</div>');
                    }
                });
            });


            // ===============================
            // CLOSE BUTTON
            // ===============================
            $('#closeCanvasBtn').click(function () {
                canvas.removeClass('open');

                // Reset buttons
                editBtn.prop('disabled', true).attr('data-id', '');
                deleteBtn.prop('disabled', true).attr('data-id', '');

                // Remove selected row highlight
                $('table tbody tr').removeClass('table-active');
            });

        });
    </script>
}
