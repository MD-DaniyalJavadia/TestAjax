@model TestAjax.Models.Transaction

<div class="px-3">
    <div class="mb-4">
        <strong>@(Model.Type == "Given" ? "I gave" : "I took")</strong>
        <h3 class="text-danger" style="font-weight:bold; font-size:1.75rem;">Rs. @Model.Amount.ToString("N0")</h3>
    </div>

    <div class="mb-3">
        <small class="text-muted">Date and time</small>
        <p>@Model.TransactionDate?.ToString("MMMM dd, yyyy , hh:mm tt")</p>
    </div>

    <div class="mb-3">
        <small class="text-muted">Notes</small>
        <p>@(string.IsNullOrWhiteSpace(Model.Details) ? "—" : Model.Details)</p>
    </div>

    @if (!string.IsNullOrEmpty(Model.PhotoFileName))
    {
        <div class="mb-3">
            <small class="text-muted">Photo</small>
            <div style="border:1px dashed #ccc; width: 150px; height: 100px; display:flex; align-items:center; justify-content:center;">
                <img src="@Url.Content($"~/uploads/receipts/{Model.PhotoFileName}")" alt="Receipt photo" style="max-width: 100%; max-height: 100%; object-fit: contain;" />
            </div>
        </div>
    }
</div>
