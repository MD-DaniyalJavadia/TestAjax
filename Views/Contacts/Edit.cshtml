@model TestAjax.Models.Contact;
@{
    ViewData["Title"] = "Add Contact";
}

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">Add Contact</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="@Url.Action("Index", "Home")">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="fas fa-angle-right"></i>
            </li>
            <li class="nav-item">
                <a href="#">Contacts</a>
            </li>
            <li class="separator">
                <i class="fas fa-angle-right"></i>
            </li>
            <li class="nav-item">
                <a href="#">Edit Contact</a>
            </li>
        </ul>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card card-round">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="card-title">
                        <i class="fas fa-user-plus mr-2"></i> Edit  Contact 

                        <a asp-controller="Contacts"
                           asp-action="Delete"
                           asp-route-id="@Model.Id"
                           class="text-danger"
                           title="Delete Contact">
                            <i class="fas fa-trash-alt" ></i>
                        </a>
                    </div>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Edit" method="post">
                        <div class="form-group">
                            <label asp-for="Name" class="form-label">
                                Contact name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Name" class="form-control" value="@Model.Name" placeholder="e.g. Zubair" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="form-label">
                                Phone number (optional)
                            </label>
                            <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber"  placeholder="03xxxxxxxxx" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Contact type</label>
                            <div class="d-flex align-items-center mt-2">

                                <div class="form-check form-check-inline">
                                    <input class="form-check-input"
                                           type="radio"
                                           asp-for="ContactType"
                                           value="Customer"
                                           id="customer">
                                    <label class="form-check-label" for="customer">
                                        Customer
                                    </label>
                                </div>

                                <div class="form-check form-check-inline ms-4">
                                    <input class="form-check-input"
                                           type="radio"
                                           asp-for="ContactType"
                                           value="Supplier"
                                           id="supplier">
                                    <label class="form-check-label" for="supplier">
                                        Supplier
                                    </label>
                                </div>

                            </div>
                        </div>


                        <div class="card-action text-end mt-4">
                            <button type="submit" class="btn btn-primary btn-round">
                                <i class="fas fa-save mr-2"></i> Save
                            </button>
                            <a asp-action="Index" class="btn btn-danger btn-round">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}