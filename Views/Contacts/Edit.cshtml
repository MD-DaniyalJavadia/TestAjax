@model TestAjax.Models.Contact;
@{
    ViewData["Title"] = "Add Contact";
}

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">Add Contact</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="@Url.Action("Index", "Home")">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="fas fa-angle-right"></i>
            </li>
            <li class="nav-item">
                <a href="#">Contacts</a>
            </li>
            <li class="separator">
                <i class="fas fa-angle-right"></i>
            </li>
            <li class="nav-item">
                <a href="#">Edit Contact</a>
            </li>
        </ul>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card card-round">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="card-title">
                        <i class="fas fa-user-plus mr-2"></i> Edit  Contact

                        <button type="button"
                                class="btn btn-link text-danger p-0 ms-3"
                                onclick="checkAndConfirmDelete(@Model.Id)">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <label asp-for="Name" class="form-label">
                                Contact name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Name" class="form-control" value="@Model.Name" placeholder="e.g. Zubair" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="form-label">
                                Phone number (optional)
                            </label>
                            <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber" placeholder="03xxxxxxxxx" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Contact type</label>
                            <div class="d-flex align-items-center mt-2">

                                <div class="form-check form-check-inline">
                                    <input class="form-check-input"
                                           type="radio"
                                           asp-for="ContactType"
                                           value="Customer"
                                           checked="@(Model.ContactType == "Customer")"
                                           id="customer">
                                    <label class="form-check-label" for="customer">
                                        Customer
                                    </label>
                                </div>

                                <div class="form-check form-check-inline ms-4">
                                    <input class="form-check-input"
                                           type="radio"
                                           asp-for="ContactType"
                                           value="Supplier"
                                           checked="@(Model.ContactType == "Supplier")"
                                           id="supplier">
                                    <label class="form-check-label" for="supplier">
                                        Supplier
                                    </label>
                                </div>

                            </div>
                        </div>


                        <div class="card-action text-end mt-4">
                            <button type="submit" class="btn btn-primary btn-round">
                                <i class="fas fa-save mr-2"></i> Save
                            </button>
                            <a asp-action="Index" class="btn btn-danger btn-round">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  
    <script>
        function checkAndConfirmDelete(contactId) {
            // Pehle check karein ke transactions hain ya nahi
            $.get('@Url.Action("HasTransactions", "Contacts")/' + contactId)
                .done(function(hasTransactions) {
                    if (hasTransactions) {
                        // Agar transactions hain to warning ke saath delete option
                        Swal.fire({
                            title: 'Warning!',
                            html: '<strong>This contact has transactions.</strong><br>If you delete this contact, all transactions will be deleted permanently.',
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#d33',
                            cancelButtonColor: '#3085d6',
                            confirmButtonText: 'Yes, delete everything!',
                            cancelButtonText: 'Cancel'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                deleteContact(contactId);
                            }
                        });
                    } else {
                        // Agar transactions nahi hain to simple confirm
                        Swal.fire({
                            title: 'Are you sure?',
                            text: "You won't be able to revert this!",
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#d33',
                            cancelButtonColor: '#3085d6',
                            confirmButtonText: 'Yes, delete it!',
                            cancelButtonText: 'Cancel'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                deleteContact(contactId);
                            }
                        });
                    }
                })
                .fail(function() {
                    Swal.fire('Error!', 'Unable to check transactions.', 'error');
                });
        }

        function deleteContact(contactId) {
            $.ajax({
                url: '@Url.Action("Delete", "Contacts")',
                type: 'POST',
                data: { id: contactId },
                success: function(result) {
                    if (result.success) {
                        Swal.fire({
                            title: 'Deleted!',
                            text: result.message,
                            icon: 'success',
                            confirmButtonColor: '#3085d6'
                        }).then(() => {
                            window.location.href = '@Url.Action("Index", "Contacts")';
                        });
                    } else {
                        Swal.fire('Error!', result.message, 'error');
                    }
                },
                error: function(xhr, status, error) {
                    console.log('Full Error Details:');
                    console.log('Status:', status);
                    console.log('Error:', error);
                    console.log('Response:', xhr.responseText);
                    
                    Swal.fire('Error!', 'Delete failed. Please try again.', 'error');
                }
            });
        }
    </script>
}
